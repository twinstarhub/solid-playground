{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "lib"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/"]
}
